GET {{BFF.ProductCatalogService_HostAddress}}/api/bff/v1/dimensions?offset=0&limit=10

### Create Product
POST {{BFF.ProductCatalogService_HostAddress}}/api/bff/v1/products/
Content-Type: application/json

{
  "id": "00000000-0000-0000-0000-000000000100",
  "name": "Sample Product",
  "description": "A sample product",
  "isActive": true,
  "urlSlug": "sample-product-1",
  "categoryId": "00000000-0000-0000-0000-000000000001",
  "brandId": "00000000-0000-0000-0000-000000000001",
  "dimensions": [ { "dimensionId": "color" } ],
  "variants": [
    {
      "id": "00000000-0000-0000-0000-000000001000",
      "sku": "SKU-001",
      "barCode": "1234567890",
      "price": 19.99,
      "description": "Red variant",
      "isActive": true,
      "isDeleted": false,
      "dimensionValues": [
        { "dimensionId": "color", "value": "red" }
      ]
    }
  ]
}

